{
  "name": "happy-teacher-monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "admin",
    "packages/*"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:admin": "npm run dev --workspace=admin",
    "build:frontend": "npm run build --workspace=frontend",
    "build:admin": "npm run build --workspace=admin",
    "build:shared": "npm run build --workspace=@happy-teacher/shared",
    "build:all": "npm run build:shared && npm run build:frontend && npm run build:admin",
    "lint": "npm run lint --workspaces"
  }
}
